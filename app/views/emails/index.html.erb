
<p id="notice"><%= notice %></p>

  <div class="h1-title">

    <h1>Emails</h1>
  </div>
<div class="container">
  <div class="row">
<table>
  <thead>
    <tr>
      <div class="col-sm-2">
        <th>Object</th>
      </div>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td id="objet"><%= email.object %></td>
        <td id="corps"><%= email.body %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' }, 
        :remote => true, :class => 'delete_email' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
<div class="container">
  <div class="row">
<%= link_to 'New Email', new_email_path %>
</div>
</div>